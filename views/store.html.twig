<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="/css/styles.css" rel="stylesheet" type="text/css">
    <title>{{store.getStoreName}}</title>
  </head>
  <body>
    <h1>{{store.getStoreName}}</h1>

    <form method='post' action='/add_brand/{{store.getId}}'>
      <select class="form-control" id="brand_id" name="brand_id">
        {% for brand in all_brands %}
          <option value="{{brand.getId}}">{{brand.getBrandName}}</option>
        {% endfor %}
      </select>
      <button type="submit" class="btn btn-success btn-block">Add Brand</button>
    </form>

    {% if store_brands is not empty %}
    <h3>List of Brands {{store.getStoreName}} sells</h3>
      <ul>
        {% for store_brand in store_brands %}
          <li>{{store_brand.getBrandName}}</li>
        {% endfor %}
      </ul>
    {% endif %}
    <a href="/">Back to Top</a>
  </body>
</html>
