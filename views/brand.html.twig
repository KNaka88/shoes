<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="/css/styles.css" rel="stylesheet" type="text/css">
    <title>{{brand.getBrandName}}</title>
  </head>
  <body>
    <h1>{{brand.getBrandName}}</h1>


    <h3>Add Store</h3>
    <form method='post' action='/add_store/{{brand.getId}}'>
      <select class="form-control" id="store_id" name="store_id">
        {% for store in all_stores %}
          <option value="{{store.getId}}">{{store.getStoreName}}</option>
        {% endfor %}
      </select>
      <button type="submit" class="btn btn-success btn-block">Add Store</button>
    </form>

    {% if brand_stores is not empty %}
      <h3>List of Stores {{brand.getBrandName}} is available</h3>
      <ul>
        {% for brand_store in brand_stores %}
          <li>{{brand_store.getStoreName}}</li>
        {% endfor %}
      </ul>
    {% endif %}
    <a href="/">Back to Top</a>
  </body>
</html>
